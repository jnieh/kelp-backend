{
  "name": "kelp-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate": "node-pg-migrate",
    "migrate:create": "node-pg-migrate create -j ts",
    "migrate:up": "node -r ts-node/register node_modules/.bin/node-pg-migrate up",
    "migrate:down": "node -r ts-node/register node_modules/.bin/node-pg-migrate down",
    "migrate:up:staging": "npm run migrate:up -- -s staging --create-schema --no-reject-unauthorized",
    "migrate:down:staging": "npm run migrate:down -- -s staging --no-reject-unauthorized",
    "migrate:up:public": "npm run migrate:up -- -s public --no-reject-unauthorized",
    "migrate:down:public": "npm run migrate:down -- -s public --no-reject-unauthorized"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jnieh/kelp-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jnieh/kelp-backend/issues"
  },
  "homepage": "https://github.com/jnieh/kelp-backend#readme",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.16.3"
  }
}